# ===========================================
# EDUMEE - Environment Variables Template
# ===========================================
# Copy this file to .env and update the values
# NEVER commit .env file to version control!
# ===========================================

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV=development
TZ=Asia/Ho_Chi_Minh

# ===========================================
# MONGODB
# ===========================================
# Root credentials (for Docker initialization)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123

# Application database credentials
MONGO_DATABASE=edumee
MONGO_USERNAME=edumee
MONGO_PASSWORD=edumee123

# Connection string for local development
MONGODB_URI=mongodb://edumee:edumee123@localhost:27017/edumee?authSource=edumee

# ===========================================
# REDIS
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# ===========================================
# MONGO EXPRESS (Database Admin UI)
# ===========================================
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin123

# ===========================================
# BACKEND (NestJS)
# ===========================================
BACKEND_PORT=3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Bcrypt rounds for password hashing
BCRYPT_ROUNDS=12

# Rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ===========================================
# FRONTEND (Next.js)
# ===========================================
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=EDUMEE
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# EMAIL SERVICE (Choose one provider)
# ===========================================
# SMTP Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM="EDUMEE <noreply@edumee.com>"

# ===========================================
# FILE UPLOAD / CLOUD STORAGE
# ===========================================
# Cloudinary (for images)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# AWS S3 (alternative)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=ap-southeast-1
# AWS_S3_BUCKET=edumee-uploads

# ===========================================
# OAUTH PROVIDERS (Optional)
# ===========================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# Facebook OAuth
# FACEBOOK_APP_ID=your-facebook-app-id
# FACEBOOK_APP_SECRET=your-facebook-app-secret

# ===========================================
# PAYMENT GATEWAY (Optional)
# ===========================================
# Stripe
# STRIPE_SECRET_KEY=sk_test_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx

# VNPay (Vietnam)
# VNPAY_TMN_CODE=your-tmn-code
# VNPAY_HASH_SECRET=your-hash-secret
# VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=debug

# Sentry (Error tracking)
# SENTRY_DSN=https://xxx@sentry.io/xxx

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_SWAGGER=true
ENABLE_CORS=true
