{
  "name": "edumee",
  "version": "1.0.0",
  "description": "EDUMEE - Career made for you",
  "private": true,
  "workspaces": [
    "fe",
    "be"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:be\" \"npm run dev:fe\"",
    "dev:be": "cd be && npm run start:dev",
    "dev:fe": "cd fe && npm run dev",
    "build": "npm run build:be && npm run build:fe",
    "build:be": "cd be && npm run build",
    "build:fe": "cd fe && npm run build",
    "lint": "npm run lint:be && npm run lint:fe",
    "lint:be": "cd be && npm run lint",
    "lint:fe": "cd fe && npm run lint",
    "test": "npm run test:be",
    "test:be": "cd be && npm run test",
    "docker:dev": "docker-compose up -d mongodb mongo-express redis",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:prod": "docker-compose --profile production up -d",
    "prepare": "node -e \"try { require.resolve('husky') } catch (e) { process.exit(0) }\" && husky || echo 'Husky not installed yet'"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "concurrently": "^8.2.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "be/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "fe/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
